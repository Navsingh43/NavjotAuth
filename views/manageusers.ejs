<%- include('partials/header-admin.ejs') %>.
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>User List </h3>
      <a href="/admin/manageusers/adduser" class="btn btn-primary"><i class="fa fa-plus"></i> Add a User</a>
      <br>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>User Email Address</th>
              <th class="text-center">Edit</th>
              <th class="text-center">Delete</th>
            </tr>
            </thead>
            <tbody>
            <% for (let count = 0; count < list.length; count++) { %>
            <tr>
              <td class="text-center"><%= list[count].email %></td>
              <td class="text-center">
                <a href="/admin/manageusers/edit/<%= list[count]._id %>" class="btn btn-primary btn-sm">Edit</a>
                </td>
                <td class="text-center">
                <a href="/admin/manageusers/delete/<%= list[count]._id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
       <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>
