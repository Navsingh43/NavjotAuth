<html>
    <head>  
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="../public/style.css">
        <link rel="stylesheet" href="@fortawesome/fontawesome-free/css/all.min.css">
    </head>

    <body>
        <%- include('partials/header.ejs') %>
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1><%= title %>
                    </h1>
                <form class="form" method="Post">
                    <div class="form-group">
                        <label for="nameTextField">Name</label>
                        <input type="text" name="name" class="form-control" id="nameTextField" placeholder="Enter the name of the medicine" required>
        
                    </div>
                    <div class="form-group">
                        <label for="authorTextField">Company</label>
                        <input type="text" name="company" class="form-control" id="companyTextField" placeholder="Enter the medicine manufacturer" required>
        
                    </div>
                    <div class="form-group">
                        <label for="priceTextField">Price</label>
                        <input type="number" name="price" class="form-control" id="publishedTextField" placeholder="Enter the price of the medicine" required>
        
                    </div>
                    <div class="form-group">
                        <label for="quanitityTextField">Quantity</label>
                        <input type="number" name="quantity" class="form-control" id="descriptionTextField" placeholder="Enter the Quantity of the medicine" required>
        
                    </div>
                    <br>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i>Submit
                         </button>
                         <a class="btn btn-warning" href="/pharmacy/list">
                             <i class="fas fa-undo"></i>Cancel</a>
                        
                </form>
                </div>
            </div>
        </div>
    </body>
</html>